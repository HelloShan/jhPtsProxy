
obj=jhPtsMiner.o MinerThread.o ProxyClient.o sha2.o sha2_interface.o Thread.o win.o

app=jhProxyMiner

all: $(app)

.c.o:
	$(CC) $(CFLAGS)  -O3 -Wall -msse4 -c -o  $@ $<
.cpp.o: 
	$(CXX) $(CFLAGS)  -O3 -Wall -msse4 -c -o $@ $<

jhProxyMiner: $(obj)
	$(CXX) $(LDFLAGS) -o $@ $(obj)  -lpthread -lstdc++

clean:
	$(RM) *.o $(app)

.PHONY: all clean
